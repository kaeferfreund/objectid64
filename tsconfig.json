{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2020"]
  },
  "include": ["*.ts"],
  "exclude": ["*.spec.ts"]
}
